// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Products {
  id          Int    @id @default(autoincrement())
  name        String @unique
  description String
  price       Float
}

model Users {
  id        Int     @id @default(autoincrement())
  name      String
  email     String  @unique
  password  String
  image_URL String?
}
